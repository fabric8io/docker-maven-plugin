      <outputDirectory>${app-classes.output.dir}</outputDirectory>
      <directory>${app-layers.dir}/spring-boot-loader</directory>
      <fileMode>0444</fileMode>
      <directoryMode>0555</directoryMode>
    </fileSet>
  </fileSets>
</assembly>
