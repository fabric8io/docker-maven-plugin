<?xml version='1.0' encoding='UTF-8'?>

<component-set>
  <components>
    <component>
      <role>org.jolokia.docker.maven.assembly.DockerAssemblyManager</role>
      <implementation>org.jolokia.docker.maven.assembly.DockerAssemblyManager</implementation>
      <instantiation-strategy>per-lookup</instantiation-strategy>
    </component>

    <component>
      <role>org.jolokia.docker.maven.config.handler.ImageConfigResolver</role>
      <implementation>org.jolokia.docker.maven.config.handler.ImageConfigResolver</implementation>
      <instantiation-strategy>per-lookup</instantiation-strategy>
      <requirements>
        <requirement>
          <role>org.jolokia.docker.maven.config.handler.ExternalConfigHandler</role>
          <field-name>resolvers</field-name>
        </requirement>
      </requirements>
    </component>

    <component>
      <role>org.jolokia.docker.maven.service.ServiceHubFactory</role>
      <implementation>org.jolokia.docker.maven.service.ServiceHubFactory</implementation>
      <instantiation-strategy>singleton</instantiation-strategy>
      <requirements>
        <requirement>
          <role>org.apache.maven.execution.MavenSession</role>
        </requirement>
        <requirement>
          <role>org.apache.maven.plugin.BuildPluginManager</role>
        </requirement>
        <requirement>
          <role>org.apache.maven.project.MavenProject</role>
        </requirement>
        <requirement>
          <role>org.jolokia.docker.maven.assembly.DockerAssemblyManager</role>
        </requirement>
      </requirements>
    </component>

    <component>
      <role>org.jolokia.docker.maven.config.handler.ExternalConfigHandler</role>
      <role-hint>compose</role-hint>
      <implementation>org.jolokia.docker.maven.config.handler.compose.DockerComposeConfigHandler</implementation>
    </component>

    <component>
      <role>org.jolokia.docker.maven.config.handler.ExternalConfigHandler</role>
      <role-hint>properties</role-hint>
      <implementation>org.jolokia.docker.maven.config.handler.property.PropertyConfigHandler</implementation>
    </component>

    <component>
      <role>org.codehaus.plexus.archiver.Archiver</role>
      <role-hint>track</role-hint>
      <implementation>org.jolokia.docker.maven.assembly.MappingTrackArchiver</implementation>
      <instantiation-strategy>singleton</instantiation-strategy>
      <requirements>
        <requirement>
          <role>org.apache.maven.execution.MavenSession</role>
        </requirement>
      </requirements>
    </component>
  </components>
</component-set>
